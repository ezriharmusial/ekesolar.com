---
import { faSun } from "@fortawesome/free-solid-svg-icons";
import Fa from "svelte-fa";
const { logoOnly, icon = true, size="hexagon-small" } = Astro.props
---

<a class="marker flex flex-shrink h-full w-full italic font-sans items-center !no-underline drop-shadow hover:text-yellow-400 dark:focus:text-gray-100 px-2 py-4" href="/">
    <h1 class="unstyled flex items-center justify-center gap-2 transition-colors duration-500 text-left font-light text-2xl leading-7 hover:text-yellow-400 dark:focus:text-gray-100">

{icon &&
        <div class={"self-center drop-shadow-lg hexagon " + size}><div class="hexagon-in1"><div class="hexagon-in2">
            </div></div></div>
}

{!logoOnly &&
              <span class="flex items-center justify-center self-center gap-3">
                <span class="artkids has-text-info">Eke</span><span class="foundation has-text-success">Solar</span>
                <span class="icon is-medium has-text-secondary self-center drop-shadow">
                  <Fa icon={faSun} />
                </span>
                Unlimited
              </span>

        }
    </h1>
</a>

<style>
img  {
    color: white;
    border: 3px solid black;
    border-radius: 100%;
}

h1 {
    color: white;
    text-shadow:
        1px 1px 2px #fff,
        -1px -1px 2px #fff,
        1px -1px 2px #fff,
        -1px 1px 2px #fff,
        1px 1px 2px #fff;
}
</style>
