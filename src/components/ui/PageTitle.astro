---
import Icon from "astro-icon";
const { title, icon, pack } = Astro.props
---
<div class="flex justify-center items-center">
    <Icon pack={pack || "teenyicons"} name={icon || "sun-solid"} class={"h-8 w-8 lg:h-10 lg:w-10 portrait:h-6 portrait:w-6 mr-1"} />
     <p class="marker transition-colors duration-500 text-center leading-9 lg:text-xl xl:text-2xl lg:leading-7 xl:leading-9 drop-shadow-2xl text-red-500 hover:text-yellow-400 dark:focus:text-gray-100">

       <span>
        {title}
        </span>
    </p>
</div>